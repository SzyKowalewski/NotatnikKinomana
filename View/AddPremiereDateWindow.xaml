<Window x:Class="NotatnikKinomana.AddPremiereDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotatnikKinomana"
        mc:Ignorable="d"
        Title="Dodaj Datę Premiery" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <ComboBox x:Name="MovieComboBox" DisplayMemberPath="Title" SelectedValuePath="Id"/>
            <TextBlock Text="Data premiery:" Margin="0,0,0,10"/>
            <DatePicker Name="PremiereDatePicker" Margin="0,0,0,20"/>
            <Button Content="Dodaj" Width="80" HorizontalAlignment="Right" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
