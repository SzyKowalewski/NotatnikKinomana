<Window x:Class="NotatnikKinomana.RateMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotatnikKinomana"
        mc:Ignorable="d"
        Title="OceńFilm" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tytuł:" Margin="0,0,0,10"/>
            <TextBox Name="TitleTextBox" Margin="0,0,0,20"/>
            <TextBlock Text="Ocena (1-10):" Margin="0,0,0,10"/>
            <Slider Name="RatingSlider" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,20"/>
            <Button Content="Dodaj" Width="80" HorizontalAlignment="Right" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
